@model Projekt_MVC.Models.TDriveModel.CreatePracownicyViewModel
@{
    ViewData["Title"] = "Nowy Pracownik";
   
}

<style>
    body {
        background-color: white;
    }
</style>


<h3 class="display-5 text-center link-dark fw-bold mb-3">Wypełnij formularz pracownikówy próbnej</h3>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-controller="Pracownicy" asp-action="CreateNewPracownicy">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group fw-bold">
                <label asp-for="Imie" class="control-label mb-1"></label>
                <input asp-for="Imie" class="form-control mb-1" />
                <span asp-validation-for="Imie" class="text" id="danger"></span>
            </div>
            <div class="form-group fw-bold">
                <label asp-for="Nazwisko" class="control-label mb-1"></label>
                <input asp-for="Nazwisko" class="form-control mb-1" />
                <span asp-validation-for="Nazwisko" class="text" id="danger"></span>
            </div>

            <div class="form-group fw-bold">
                <label asp-for="NrTel" class="control-label mb-1"></label>
                <input asp-for="NrTel" class="form-control mb-1" />
                <span asp-validation-for="NrTel" class="text" id="danger"></span>
            </div>
            <div class="form-group fw-bold">
                <input type="submit" value="Zapisz" class="btn btn-primary btn-lg mx-auto d-block w-25" id="add" />
            </div>
        </form>
    </div>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
